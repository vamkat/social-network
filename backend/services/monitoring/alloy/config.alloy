
logging {
  level  = "info"
  format = "logfmt"
}

otelcol.exporter.otlphttp "victoriaExporter" {
  client {
    endpoint = coalesce(sys.env("VICTORIA_ADDRESS"), "http://victoria-logs:9428/insert/opentelemetry/")
  }
}

otelcol.processor.batch "default" {
  output {
    logs    = [otelcol.exporter.otlphttp.victoriaExporter.input]
    traces = []
    metrics = []
  }
}

otelcol.processor.memory_limiter "default" {
  check_interval = "1s"
  limit          = "1GiB"

  output {
    logs    = [otelcol.processor.batch.default.input]
    traces = []
    metrics = []
  }
}

otelcol.receiver.otlp "default" {
  grpc {
    endpoint = "0.0.0.0:4317"
  }

  output {
    logs    = [otelcol.processor.batch.default.input]
    traces = []
    metrics = []
  }
}

